<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContainerSearchViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorGrayLight"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/searchViewHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLight"
                android:drawablePadding="@dimen/_8mdp"
                android:gravity="center_vertical"
                android:text="@string/search_in_market"
                android:textSize="@dimen/_16font_mdp"
                app:drawableStartCompat="@drawable/ic_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageViewLogoSearch"
                android:layout_width="@dimen/_70mdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8mdp"
                android:src="@drawable/market_txt_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/searchViewHome"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</layout>