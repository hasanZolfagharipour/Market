<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="viewModel"
            type="com.zolfagharipour.market.viewModel.HomeViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150mdp"
        android:layout_height="@dimen/_200mdp"
        android:layout_margin="@dimen/_8mdp"
        app:cardCornerRadius="@dimen/_16mdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_product_background_gradient"
            android:padding="@dimen/_8mdp">

            <ImageView
                android:id="@+id/imageViewPhotoProduct"
                android:layout_width="@dimen/_100mdp"
                android:layout_height="@dimen/_100mdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtViewTitleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.productList.get(position).name}"
                app:layout_constraintTop_toBottomOf="@id/imageViewPhotoProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14font_mdp"
                android:gravity="center"
                android:fontFamily="@font/font_yekan"/>

            <TextView
                android:id="@+id/txtViewPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.currentPrice(position)}"
                app:layout_constraintTop_toBottomOf="@id/txtViewTitleProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14font_mdp"
                android:gravity="center"
                android:fontFamily="@font/font_yekan"/>

            <TextView
                android:id="@+id/txtViewRegularPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.regularPrice(position)}"
                app:layout_constraintTop_toBottomOf="@id/txtViewPriceProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_14font_mdp"
                android:gravity="center"
                android:fontFamily="@font/font_yekan"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>