<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.HomeFragment">

    <data>

        <variable
            name="viewModel"
            type="com.zolfagharipour.market.viewModel.HomeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewContainerSearchViewHome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_margin="@dimen/_12mdp"
                app:cardBackgroundColor="@color/colorGrayLight"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <TextView
                        android:id="@+id/searchViewHome"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrayLight"
                        android:drawablePadding="@dimen/_8mdp"
                        android:gravity="center_vertical"
                        android:text="@string/search_in_market"
                        android:textSize="@dimen/_16font_mdp"
                        app:drawableStartCompat="@drawable/ic_search"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imageViewLogoSearch"
                        android:layout_width="@dimen/_70mdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8mdp"
                        android:src="@drawable/market_txt_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/searchViewHome"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerSlider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150mdp"
                android:layout_marginTop="@dimen/_16mdp"
                android:paddingStart="@dimen/_24mdp"
                android:paddingEnd="@dimen/_24mdp"
                app:layout_constraintTop_toBottomOf="@id/cardViewContainerSearchViewHome" />


            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dotCircleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:dotsColor="@color/white"
                app:dotsSize="@dimen/_6mdp"
                app:dotsSpacing="2dp"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerSlider"
                app:layout_constraintEnd_toEndOf="@id/viewPagerSlider"
                app:layout_constraintStart_toStartOf="@id/viewPagerSlider"
                app:selectedDotColor="@color/colorPrimary" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewLastProducts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16mdp"
                android:background="@drawable/recyclerview_background_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerSlider" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</layout>